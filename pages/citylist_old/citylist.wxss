/* pages/citylist/citylist.wxss */

.wordlist {
  width: 30px;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  right: 0;
  background-color: #D1D1D1;
}
.capital_letter {
  font-family: PingFangSC-Medium;
  font-size: 10px;
  flex: 1;
}


.wordlist_row {
  width: 100%;
  height: 25px;
  display: flex;
  flex-direction: column;
  background-color: #D1D1D1;
}
.capital_letter_row {
  font-family: PingFangSC-Medium;
  font-size: 20px;
}

